@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "Coordinator";
}

<div class="container py-4">
    <h2 class="mb-4">Coordinator Verification</h2>
    <div class="card shadow border-0">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4">Lecturer</th>
                        <th>Details</th>
                        <th>System Automation</th>
                        <th class="text-end pe-4">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        bool flag = item.HoursWorked > 100 || item.Amount > 10000;
                        <tr class="@(flag ? "table-warning" : "")">
                            <td class="ps-4 fw-bold">@item.LecturerId</td>
                            <td>@item.Module <br /> <small>@item.HoursWorked hrs @@ R @item.HourlyRate</small></td>
                            <td>
                                @if (flag)
                                {
                                    <span class="badge bg-danger">Auto-Flagged</span>
                                }
                                else
                                {

                                    <span class="badge bg-success">Auto-Pass</span>
                                }
                            </td>
                            <td class="text-end pe-4">
                                <form asp-action="Verify" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-success btn-sm">Verify</button>
                                </form>
                                <form asp-action="RejectCoordinator" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button class="btn btn-outline-danger btn-sm">Reject</button>
                                </form>
                            </td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr><td colspan="4" class="text-center py-4">No pending claims.</td></tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>