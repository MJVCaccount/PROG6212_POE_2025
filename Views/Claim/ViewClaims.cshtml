@model IEnumerable<Contract_Monthly_Claim_System.Models.Claim>
@{
    ViewData["Title"] = "My Claims";
}

<div class="container py-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white py-3 border-0">
            <h4 class="mb-0 fw-bold">
                <i class="fas fa-list me-2 text-primary"></i>
                My Submitted Claims
            </h4>
        </div>
        <div class="card-body p-0">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Claim ID</th>
                                <th>Date</th>
                                <th>Module</th>
                                <th>Hours / Rate</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th class="pe-4">Documents</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">
                                        #@claim.Id.Substring(0, 8)
                                    </td>
                                    <td>
                                        @claim.SubmitDate.ToString("MMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@claim.ClaimPeriod</small>
                                    </td>
                                    <td>
                                        <strong>@claim.Module</strong>
                                    </td>
                                    <td>
                                        @claim.HoursWorked hrs
                                        <br />
                                        <small class="text-muted">@@ R@claim.HourlyRate/hr</small>
                                    </td>
                                    <td class="fw-bold text-success">
                                        R @claim.Amount.ToString("N2")
                                    </td>
                                    <td>
                                        <span class="status-badge status-@claim.Status.ToString()">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td class="pe-4">
                                        @if (claim.Documents != null && claim.Documents.Any())
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-file-alt me-1"></i>
                                                @claim.Documents.Count
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">None</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <p class="text-muted">No claims submitted yet.</p>
                    <a asp-action="Submit" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Submit First Claim
                    </a>
                </div>
            }
        </div>
    </div>
</div>