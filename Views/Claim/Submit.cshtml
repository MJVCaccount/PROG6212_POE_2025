@model Contract_Monthly_Claim_System.Models.Claim

@{
    ViewData["Title"] = "Submit Claim";
}

<div class="content-container">
    <div class="content-header">
        <h2><i class="fas fa-plus-circle me-2"></i>Submit Monthly Claim</h2>
    </div>
    <div class="content-body">
        <form asp-action="Submit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-4">
                    <label asp-for="HoursWorked"></label>
                    <input asp-for="HoursWorked" class="form-control" />
                    <span asp-validation-for="HoursWorked" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label asp-for="HourlyRate"></label>
                    <input asp-for="HourlyRate" class="form-control" readonly />
                </div>
                <div class="col-md-4">
                    <label asp-for="Module"></label>
                    <select asp-for="Module" class="form-control">
                        <option>PROG6212</option>
                        <option>DATA6222</option>
                        <option>WEB6234</option>
                    </select>
                    <span asp-validation-for="Module" class="text-danger"></span>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label asp-for="Notes"></label>
                    <textarea asp-for="Notes" class="form-control"></textarea>
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-md-12">
                    <label>Supporting Documents</label>
                    <input type="file" name="Documents" multiple class="form-control" />
                    <small>Max 5MB, .pdf/.docx/.xlsx only</small>
                </div>
            </div>
            <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}