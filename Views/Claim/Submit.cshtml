@model Contract_Monthly_Claim_System.Models.Claim
@{
    ViewData["Title"] = "Submit New Claim";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white p-4 rounded-top-4" style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));">
                    <h3 class="mb-0 fw-bold"><i class="fas fa-file-invoice-dollar me-2"></i>Submit Monthly Claim</h3>
                    <p class="mb-0 opacity-75 small">
                        Your hourly rate is automatically retrieved from the HR database.
                    </p>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Submit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="LecturerId" />

                        <div class="alert alert-light border-start border-4 border-primary shadow-sm" role="alert">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-uppercase text-muted fw-bold">Lecturer</small>
                                    <div class="fw-bold text-dark">@ViewBag.LecturerName</div>
                                </div>
                                <div class="col-md-6">
                                    <small class="text-uppercase text-muted fw-bold">Contract Rate</small>
                                    <div class="fw-bold text-primary fs-5">
                                        R <span id="displayRate">@Model.HourlyRate</span> / hr
                                        <input asp-for="HourlyRate" type="hidden" id="hourlyRate" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="ClaimPeriod" class="form-label fw-bold">Claim Period</label>
                                <input asp-for="ClaimPeriod" type="month" class="form-control shadow-sm" />
                                <span asp-validation-for="ClaimPeriod" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Module" class="form-label fw-bold">Module Code</label>
                                <input asp-for="Module" class="form-control shadow-sm" placeholder="e.g., PROG6212" />
                                <span asp-validation-for="Module" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-4 align-items-end">
                            <div class="col-md-6">
                                <label asp-for="HoursWorked" class="form-label fw-bold">Hours Worked</label>
                                <input asp-for="HoursWorked" id="hoursWorked" type="number" step="0.1" class="form-control shadow-sm" placeholder="0.0" />
                                <span asp-validation-for="HoursWorked" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <div class="card bg-light border-0">
                                    <div class="card-body py-2 text-center">
                                        <small class="text-muted text-uppercase fw-bold">Estimated Payout</small>
                                        <h3 class="text-success fw-bold mb-0" id="totalDisplay">R 0.00</h3>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Notes" class="form-label fw-bold">Additional Notes</label>
                            <textarea asp-for="Notes" class="form-control shadow-sm" rows="2" placeholder="Any specific details about these hours..."></textarea>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold"><i class="fas fa-paperclip me-2"></i>Supporting Documents</label>
                            <div class="input-group shadow-sm">
                                <input type="file" name="Documents" class="form-control" multiple accept=".pdf,.docx,.xlsx" />
                                <span class="input-group-text bg-white text-muted"><i class="fas fa-upload"></i></span>
                            </div>
                            <div class="form-text">
                                <i class="fas fa-lock me-1"></i> Files are automatically encrypted upon upload. Max 5MB.
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-light text-muted px-4">Cancel</a>
                            <button type="submit" class="btn btn-primary px-5 shadow-sm fw-bold">
                                <i class="fas fa-paper-plane me-2"></i>Submit Claim
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // AUTOMATION SCRIPT: Real-time calculation to improve UX
        $(document).ready(function () {
            const $rate = $('#hourlyRate');
            const $hours = $('#hoursWorked');
            const $display = $('#totalDisplay');

            function calculate() {
                const r = parseFloat($rate.val()) || 0;
                const h = parseFloat($hours.val()) || 0;
                const total = r * h;

                // Format currency
                $display.text('R ' + total.toLocaleString('en-ZA', { minimumFractionDigits: 2, maximumFractionDigits: 2 }));
            }

            $hours.on('input', calculate);
        });
    </script>
}