@model Contract_Monthly_Claim_System.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white p-4">
            <h3 class="mb-0"><i class="fas fa-paper-plane me-2"></i>Submit Claim</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Submit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="LecturerId" />
                <input type="hidden" asp-for="HourlyRate" id="hiddenRate" />

                <div asp-validation-summary="All" class="alert alert-danger" role="alert" style="@(ViewData.ModelState.IsValid ? "display:none" : "")">
                    <i class="fas fa-exclamation-circle me-2"></i> <strong>Please fix the following errors:</strong>
                </div>

                <div class="alert alert-info d-flex justify-content-between align-items-center">
                    <span><strong>Lecturer:</strong> @ViewBag.LecturerName</span>
                    <span class="fs-5"><strong>Contract Rate:</strong> R @Model.HourlyRate /hr</span>
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Month</label>
                        <input asp-for="ClaimPeriod" type="month" class="form-control" required />
                        <span asp-validation-for="ClaimPeriod" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Module</label>
                        <input asp-for="Module" class="form-control" placeholder="PROG6212" required />
                        <span asp-validation-for="Module" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Hours Worked</label>
                        <input asp-for="HoursWorked" id="hoursWorked" type="number" step="0.5" class="form-control" required />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Estimated Payout</label>
                        <input type="text" id="totalDisplay" class="form-control bg-light fw-bold text-success" readonly value="R 0.00" />
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label fw-bold">Supporting Documents</label>
                    <input type="file" name="Documents" class="form-control" multiple accept=".pdf,.docx,.xlsx" />
                    <div class="form-text">Max 5MB. Files are encrypted.</div>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">Submit Claim</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Visual calculation script
            $('#hoursWorked').on('input', function() {
                var r = parseFloat($('#hiddenRate').val());
                var h = parseFloat($(this).val());
                if(!isNaN(r) && !isNaN(h)) {
                    $('#totalDisplay').val('R ' + (r * h).toFixed(2));
                }
            });
        });
    </script>
}