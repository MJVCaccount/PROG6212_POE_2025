@model Contract_Monthly_Claim_System.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white p-4">
            <h3 class="mb-0"><i class="fas fa-paper-plane me-2"></i>Submit Claim</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="Submit" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="LecturerId" />

                <div class="alert alert-info d-flex justify-content-between align-items-center">
                    <span><strong>Lecturer:</strong> @ViewBag.LecturerName</span>
                    <span class="fs-5"><strong>Rate:</strong> R @Model.HourlyRate /hr</span>
                    <input asp-for="HourlyRate" type="hidden" id="hourlyRate" />
                </div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Period</label>
                        <input asp-for="ClaimPeriod" type="month" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Module</label>
                        <input asp-for="Module" class="form-control" placeholder="PROG6212" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Hours</label>
                        <input asp-for="HoursWorked" id="hoursWorked" type="number" step="0.1" class="form-control" required />
                        <span asp-validation-for="HoursWorked" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold text-success">Estimated Payout</label>
                        <input type="text" id="totalDisplay" class="form-control bg-light fw-bold text-success" readonly value="R 0.00" />
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label fw-bold">Documents</label>
                    <input type="file" name="Documents" class="form-control" multiple accept=".pdf,.docx,.xlsx" />
                    <div class="form-text">Max 5MB. Files are encrypted.</div>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-4 py-2 fw-bold">Submit Claim</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#hoursWorked').on('input', function() {
                var rate = parseFloat($('#hourlyRate').val());
                var hours = parseFloat($(this).val());
                if(!isNaN(rate) && !isNaN(hours)) {
                    $('#totalDisplay').val('R ' + (rate * hours).toFixed(2));
                }
            });
        });
    </script>
}