@model Contract_Monthly_Claim_System.Models.Lecturer
@{
    ViewData["Title"] = "Add New Lecturer";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white p-4 border-bottom">
                    <h4 class="mb-0 fw-bold text-primary"><i class="fas fa-user-plus me-2"></i>Onboard New Lecturer</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddLecturer" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="LecturerId" class="form-control" placeholder="ID" />
                            <label asp-for="LecturerId">Lecturer ID (e.g., IIE2025001)</label>
                            <span asp-validation-for="LecturerId" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Name" />
                            <label asp-for="Name">Full Name</label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <label asp-for="Email">Email Address</label>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="Department" class="form-control" placeholder="Dept" />
                            <label asp-for="Department">Department</label>
                        </div>
                        <div class="form-floating mb-4">
                            <input asp-for="HourlyRate" class="form-control" placeholder="Rate" type="number" step="0.01" />
                            <label asp-for="HourlyRate">Contract Hourly Rate (R)</label>
                            <span asp-validation-for="HourlyRate" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">Create Profile</button>
                            <a asp-action="Index" class="btn btn-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>