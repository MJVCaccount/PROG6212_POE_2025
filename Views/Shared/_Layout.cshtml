@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand fw-bold text-primary" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-university me-2"></i>CMCS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @{
                            var role = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
                        }

                        @if (role == "Lecturer")
                        {
                            <li class="nav-item ms-2">
                                <a class="nav-link text-primary" asp-controller="Claim" asp-action="Submit">
                                    <i class="fas fa-plus-circle me-1"></i> Submit Claim
                                </a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="nav-link text-dark" asp-controller="Claim" asp-action="ViewClaims">My History</a>
                            </li>
                        }

                        @if (role == "Coordinator")
                        {
                            <li class="nav-item border-start ms-3 ps-3">
                                <a class="nav-link text-primary fw-bold" asp-controller="Claim" asp-action="CoordinatorApprove">
                                    <i class="fas fa-check-circle me-1"></i> Verify Claims
                                </a>
                            </li>
                        }

                        @if (role == "Manager")
                        {
                            <li class="nav-item border-start ms-3 ps-3">
                                <a class="nav-link text-success fw-bold" asp-controller="Claim" asp-action="ManagerApprove">
                                    <i class="fas fa-check-double me-1"></i> Approve Claims
                                </a>
                            </li>
                        }

                        @if (role == "HR")
                        {
                            <li class="nav-item dropdown ms-2">
                                <a class="nav-link dropdown-toggle text-danger fw-bold" href="#" data-bs-toggle="dropdown">
                                    <i class="fas fa-users-cog me-1"></i> HR Admin
                                </a>
                                <ul class="dropdown-menu shadow">
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Dashboard"><i class="fas fa-tachometer-alt me-2"></i>Dashboard</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="Index"><i class="fas fa-users me-2"></i>Manage Lecturers</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="GenerateReport"><i class="fas fa-file-invoice-dollar me-2"></i>Reports</a></li>
                                    <li><a class="dropdown-item" asp-controller="HR" asp-action="AuditLog"><i class="fas fa-history me-2"></i>Audit Log</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (!string.IsNullOrEmpty(role))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle btn btn-light rounded-pill px-3" href="#" data-bs-toggle="dropdown">
                                    <i class="fas fa-user-circle me-1"></i> @HttpContextAccessor.HttpContext.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow">
                                    <li><span class="dropdown-item-text text-muted small text-uppercase fw-bold">@role Account</span></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword"><i class="fas fa-key me-2"></i>Change Password</a></li>
                                    <li><a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary rounded-pill px-4" asp-controller="Account" asp-action="Login">
                                    Login <i class="fas fa-arrow-right ms-1"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-4 bg-light">
        <div class="container text-center">
            &copy; 2025 - Contract Monthly Claim System - <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>