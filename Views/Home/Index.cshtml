@model Contract_Monthly_Claim_System.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-1">
                <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                Dashboard Overview
            </h2>
            <p class="text-muted mb-0">
                Welcome back, <strong>@ViewBag.UserName</strong>!
                Here is your monthly summary.
            </p>
        </div>
        <div>
            <a asp-controller="Claim" asp-action="Submit" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus-circle me-2"></i>New Claim
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <!-- Pending Claims Card -->
        <div class="col-md-3">
            <div class="stats-card border-start-warning">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-number text-warning">@Model.PendingClaims</div>
                        <div class="stats-label">Pending Claims</div>
                    </div>
                    <div class="stats-icon bg-warning bg-opacity-10 text-warning">
                        <i class="fas fa-clock fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Under Review Card -->
        <div class="col-md-3">
            <div class="stats-card border-start-info">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-number text-info">@Model.UnderReviewClaims</div>
                        <div class="stats-label">Under Review</div>
                    </div>
                    <div class="stats-icon bg-info bg-opacity-10 text-info">
                        <i class="fas fa-search fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Approved Claims Card -->
        <div class="col-md-3">
            <div class="stats-card border-start-success">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-number text-success">@Model.ApprovedClaims</div>
                        <div class="stats-label">Approved</div>
                    </div>
                    <div class="stats-icon bg-success bg-opacity-10 text-success">
                        <i class="fas fa-check-circle fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Earnings Card -->
        <div class="col-md-3">
            <div class="stats-card border-start-primary">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-number text-primary">R @Model.TotalEarnings.ToString("N2")</div>
                        <div class="stats-label">Total Earnings</div>
                    </div>
                    <div class="stats-icon bg-primary bg-opacity-10 text-primary">
                        <i class="fas fa-money-bill-wave fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Section -->
    <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white py-3 border-0 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 fw-bold">
                <i class="fas fa-history me-2 text-primary"></i>
                Recent Claims
            </h5>
            <a asp-controller="Claim" asp-action="ViewClaims" class="btn btn-sm btn-outline-primary">
                View All <i class="fas fa-arrow-right ms-1"></i>
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model.RecentClaims != null && Model.RecentClaims.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-4">Date</th>
                                <th>Module</th>
                                <th>Hours</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th class="pe-4">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model.RecentClaims)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-muted">
                                        @claim.SubmitDate.ToString("MMM dd, yyyy")
                                        <br />
                                        <small class="text-muted">@claim.SubmitDate.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <strong>@claim.Module</strong>
                                        <br />
                                        <small class="text-muted">@claim.ClaimPeriod</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-light text-dark">
                                            @claim.HoursWorked hrs
                                        </span>
                                    </td>
                                    <td class="fw-bold text-success">
                                        R @claim.Amount.ToString("N2")
                                    </td>
                                    <td>
                                        <span class="status-badge status-@claim.Status.ToString()">
                                            @claim.Status
                                        </span>
                                    </td>
                                    <td class="pe-4">
                                        <button class="btn btn-sm btn-outline-secondary"
                                                title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <p class="text-muted">
                        No claims found. Start by submitting your first claim!
                    </p>
                    <a asp-controller="Claim" asp-action="Submit" class="btn btn-primary mt-2">
                        <i class="fas fa-plus me-2"></i>Submit First Claim
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Enhanced Dashboard Styling */
    .stats-card {
        background: white;
        border: none;
        border-radius: 16px;
        padding: 1.5rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.07);
        transition: all 0.3s ease;
        height: 100%;
        border-left: 4px solid #dee2e6;
    }

        .stats-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.12);
        }

    .border-start-warning {
        border-left-color: #ffc107 !important;
    }

    .border-start-info {
        border-left-color: #0dcaf0 !important;
    }

    .border-start-success {
        border-left-color: #198754 !important;
    }

    .border-start-primary {
        border-left-color: #0d6efd !important;
    }

    .stats-number {
        font-size: 2.25rem;
        font-weight: 800;
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stats-label {
        color: #6c757d;
        text-transform: uppercase;
        font-size: 0.8rem;
        letter-spacing: 0.05em;
        font-weight: 600;
    }

    .stats-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.03em;
    }

    .status-Pending {
        background-color: #fef3c7;
        color: #d97706;
    }

    .status-UnderReview {
        background-color: #dbeafe;
        color: #2563eb;
    }

    .status-Approved {
        background-color: #d1fae5;
        color: #059669;
    }

    .status-Rejected {
        background-color: #fee2e2;
        color: #dc2626;
    }
</style>