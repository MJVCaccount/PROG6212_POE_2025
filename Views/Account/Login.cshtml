@model Contract_Monthly_Claim_System.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null; // Standalone layout for a distraction-free login experience
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Contract Monthly Claim System</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        /* --- Modern Login Page Styling --- */
        :root {
            --primary-gradient: linear-gradient(135deg, #0f766e 0%, #0d9488 100%); /* Teal Gradient matching system theme */
            --glass-bg: rgba(255, 255, 255, 0.95);
            --shadow-xl: 0 20px 60px rgba(0, 0, 0, 0.15);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: #f3f4f6; /* Neutral light gray background */
            background-image: radial-gradient(#0d9488 0.5px, transparent 0.5px), radial-gradient(#0d9488 0.5px, #f3f4f6 0.5px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            background: var(--glass-bg);
            border-radius: 24px;
            box-shadow: var(--shadow-xl);
            overflow: hidden;
            max-width: 1100px;
            width: 100%;
            display: flex;
            min-height: 650px;
            position: relative;
        }

        /* --- Left Side: Branding Section --- */
        .login-branding {
            background: var(--primary-gradient);
            color: white;
            padding: 60px;
            flex: 1.2; /* Takes slightly more space */
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

            /* Decorative Circles */
            .login-branding::before {
                content: '';
                position: absolute;
                width: 400px;
                height: 400px;
                background: rgba(255, 255, 255, 0.1);
                border-radius: 50%;
                top: -150px;
                right: -100px;
            }

            .login-branding::after {
                content: '';
                position: absolute;
                width: 250px;
                height: 250px;
                background: rgba(255, 255, 255, 0.05);
                border-radius: 50%;
                bottom: -80px;
                left: -80px;
            }

        .branding-content {
            position: relative;
            z-index: 1;
        }

        .branding-logo {
            font-size: 3.5rem;
            margin-bottom: 1.5rem;
            text-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .branding-title {
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 1rem;
            line-height: 1.2;
            letter-spacing: -0.02em;
        }

        .branding-subtitle {
            font-size: 1.1rem;
            opacity: 0.9;
            line-height: 1.6;
            margin-bottom: 2rem;
        }

        .branding-features {
            list-style: none;
            border-top: 1px solid rgba(255,255,255,0.2);
            padding-top: 2rem;
        }

            .branding-features li {
                padding: 0.5rem 0;
                display: flex;
                align-items: center;
                gap: 1rem;
                font-size: 1rem;
                font-weight: 500;
            }

        /* --- Right Side: Form Section --- */
        .login-form-section {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: white;
        }

        .form-header {
            margin-bottom: 2rem;
        }

            .form-header h2 {
                font-size: 2rem;
                font-weight: 800;
                color: #111827;
                margin-bottom: 0.5rem;
            }

            .form-header p {
                color: #6b7280;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 1.2rem;
                top: 50%;
                transform: translateY(-50%);
                color: #9ca3af;
                transition: color 0.3s;
            }

        .form-control {
            width: 100%;
            padding: 0.875rem 1rem 0.875rem 3rem; /* Padding left for icon */
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                outline: none;
                border-color: #0d9488; /* Teal focus color */
                box-shadow: 0 0 0 4px rgba(13, 148, 136, 0.1);
            }

                .form-control:focus + i {
                    color: #0d9488;
                }

        .password-toggle {
            position: absolute;
            right: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #9ca3af;
        }

            .password-toggle:hover {
                color: #0d9488;
            }

        .btn-login {
            width: 100%;
            padding: 1rem;
            background: var(--primary-gradient);
            border: none;
            border-radius: 12px;
            color: white;
            font-weight: 700;
            font-size: 1.1rem;
            cursor: pointer;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            margin-top: 1rem;
            box-shadow: 0 4px 6px rgba(13, 148, 136, 0.2);
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 15px rgba(13, 148, 136, 0.3);
            }

            .btn-login:active {
                transform: translateY(0);
            }

        /* --- Alerts & Test Credentials --- */
        .alert {
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 0.9rem;
        }

        .alert-danger {
            background: #fef2f2;
            color: #b91c1c;
            border: 1px solid #fecaca;
        }

        .alert-success {
            background: #ecfdf5;
            color: #047857;
            border: 1px solid #a7f3d0;
        }

        .test-credentials {
            background: #f8fafc;
            padding: 1.5rem;
            border-radius: 12px;
            margin-top: 2rem;
            border: 1px dashed #cbd5e1;
        }

        .credential-item {
            display: flex;
            justify-content: space-between;
            padding: 0.4rem 0;
            font-size: 0.85rem;
            border-bottom: 1px solid #e2e8f0;
        }

            .credential-item:last-child {
                border-bottom: none;
            }

        .credential-value {
            font-family: 'Courier New', monospace;
            color: #0f766e;
            font-weight: 700;
        }

        /* --- Responsive Design Fix (The @@media is key here) --- */
        @@media (max-width: 992px) {
            .login-container {
                flex-direction: column;
                max-width: 500px;
            }

            .login-branding {
                padding: 40px 30px;
                min-height: auto;
                text-align: center;
            }

            .branding-features {
                display: none; /* Hide features list on mobile to save space */
            }

            .login-form-section {
                padding: 40px 30px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-branding">
            <div class="branding-content">
                <div class="branding-logo">
                    <i class="fas fa-university"></i>
                </div>
                <h1 class="branding-title">CMCS Portal</h1>
                <p class="branding-subtitle">
                    The Independent Institute of Education's centralized platform for contract claim management.
                </p>

                <ul class="branding-features">
                    <li><i class="fas fa-bolt"></i> Automated Hourly Rate Lookup</li>
                    <li><i class="fas fa-calculator"></i> Instant Calculation Engine</li>
                    <li><i class="fas fa-file-contract"></i> Digital Verification Workflow</li>
                    <li><i class="fas fa-lock"></i> Secure Document Encryption</li>
                </ul>
            </div>
        </div>

        <div class="login-form-section">
            <div class="form-header">
                <h2>Welcome Back</h2>
                <p>Please enter your credentials to access the dashboard.</p>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    <i class="fas fa-check-circle"></i>
                    <span>@TempData["Success"]</span>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    <span>@Html.ValidationSummary(false, "", new { @class = "mb-0" })</span>
                </div>
            }

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="lecturerId" class="form-label">User ID</label>
                    <div class="input-icon">
                        <i class="fas fa-id-card"></i>
                        <input type="text"
                               id="lecturerId"
                               name="lecturerId"
                               class="form-control"
                               placeholder="e.g., IIE2024001"
                               required
                               autofocus />
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="form-label">Password</label>
                    <div class="input-icon">
                        <i class="fas fa-key"></i>
                        <input type="password"
                               id="password"
                               name="password"
                               class="form-control"
                               placeholder="Enter your password"
                               required />
                        <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                    </div>
                </div>

                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Sign In
                </button>
            </form>

            <div class="test-credentials">
                <div class="d-flex align-items-center mb-3">
                    <i class="fas fa-info-circle text-primary me-2"></i>
                    <h6 class="mb-0 fw-bold text-uppercase small text-muted">Demo Accounts</h6>
                </div>
                <div class="credential-item">
                    <span>Lecturer</span>
                    <span class="credential-value">IIE2024001 / Lecturer@123</span>
                </div>
                <div class="credential-item">
                    <span>Coordinator</span>
                    <span class="credential-value">COORD2025001 / Coord@123</span>
                </div>
                <div class="credential-item">
                    <span>Manager</span>
                    <span class="credential-value">MGR2025001 / Manager@123</span>
                </div>
                <div class="credential-item">
                    <span>HR Admin</span>
                    <span class="credential-value">HR2025001 / Admin@123</span>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Toggle password visibility
        const togglePassword = document.getElementById('togglePassword');
        const passwordInput = document.getElementById('password');

        if (togglePassword) {
            togglePassword.addEventListener('click', function () {
                // Toggle the type attribute
                const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                passwordInput.setAttribute('type', type);

                // Toggle the icon
                this.classList.toggle('fa-eye');
                this.classList.toggle('fa-eye-slash');
            });
        }

        // Add loading state to button on form submit
        document.querySelector('form').addEventListener('submit', function (e) {
            if (this.checkValidity()) {
                const btn = document.querySelector('.btn-login');
                const originalWidth = btn.offsetWidth;
                btn.style.width = originalWidth + 'px'; // Maintain width
                btn.innerHTML = '<i class="fas fa-circle-notch fa-spin me-2"></i> Authenticating...';
                btn.style.opacity = '0.8';
                btn.style.pointerEvents = 'none';
            }
        });
    </script>
</body>
</html>