{
  /*
   * APPLICATION SETTINGS FOR CONTRACT MONTHLY CLAIM SYSTEM
   * This file contains configuration settings for the application.
   * Sensitive data (passwords, keys) should be stored in User Secrets or Azure Key Vault in production.
   */

  /*
   * DATABASE CONNECTION STRINGS
   * Defines how the application connects to the database.
   * Format for SQL Server: Server=<server>;Database=<dbname>;User Id=<user>;Password=<password>;
   * 
   * For Development (Local SQL Server):
   *   - Server=(localdb)\\mssqllocaldb uses SQL Server LocalDB (installed with Visual Studio)
   *   - Trusted_Connection=True uses Windows Authentication (no password needed)
   * 
   * For Production:
   *   - Replace with actual server address
   *   - Use SQL Authentication with strong passwords
   *   - Store connection string in Azure Key Vault or environment variables
   */
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=ContractClaimSystemDB;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },

  /*
   * LOGGING CONFIGURATION
   * Controls what information is logged and where it goes.
   * 
   * Log Levels (from least to most severe):
   *   - Trace: Very detailed logs (use only for debugging)
   *   - Debug: Debugging information (development only)
   *   - Information: General informational messages
   *   - Warning: Something unexpected but not critical
   *   - Error: Error events that still allow the application to continue
   *   - Critical: Serious failures requiring immediate attention
   * 
   * In Production:
   *   - Set Default to "Warning" or "Error" to reduce log volume
   *   - Set Microsoft.AspNetCore to "Warning"
   */
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },

  /*
   * HOSTING CONFIGURATION
   * Controls HTTP.sys web server settings (Windows only).
   * AllowedHosts limits which domain names can access the application.
   * 
   * "*" allows all hosts (development only)
   * In Production: Specify exact domains, e.g., "iie.ac.za;claims.iie.ac.za"
   */
  "AllowedHosts": "*",

  /*
   * CUSTOM APPLICATION SETTINGS
   * Application-specific configuration values.
   */
  "AppSettings": {
    /*
     * SESSION CONFIGURATION
     * Timeout: Session expiration time in minutes (after inactivity)
     * CookieName: Name of the session cookie (default: .AspNetCore.Session)
     */
    "SessionTimeout": 30,

    /*
     * FILE UPLOAD CONFIGURATION
     * MaxFileSize: Maximum upload file size in MB
     * AllowedExtensions: Comma-separated list of allowed file types
     * DocumentStoragePath: Physical path for encrypted document storage (if not using DB)
     */
    "MaxFileSizeMB": 5,
    "AllowedFileExtensions": ".pdf,.docx,.xlsx",

    /*
     * AUTOMATION SETTINGS
     * MaxHoursPerMonth: Maximum hours allowed per claim (flags claims exceeding this)
     * MinHourlyRate: Minimum allowed hourly rate (validation)
     * MaxHourlyRate: Maximum allowed hourly rate (validation)
     */
    "MaxHoursPerMonth": 180,
    "MinHourlyRate": 200,
    "MaxHourlyRate": 500,
   

    /*
     * EMAIL CONFIGURATION (Future Feature)
     * Settings for sending email notifications (claim approvals, rejections, etc.)
     * SMTP server details would go here
     */
    "EmailSettings": {
      "SMTPServer": "smtp.office365.com",
      "SMTPPort": 587,
      "UseTLS": true,
      "SenderEmail": "noreply@iie.ac.za",
      "SenderName": "IIE Claims System"
    },

    /*
     * SECURITY SETTINGS
     * RequireHTTPS: Enforce HTTPS connections (always true in production)
     * PasswordMinLength: Minimum password length requirement
     * PasswordRequireUppercase: Require at least one uppercase letter
     * PasswordRequireLowercase: Require at least one lowercase letter
     * PasswordRequireDigit: Require at least one number
     */
    "SecuritySettings": {
      "RequireHTTPS": true,
      "PasswordMinLength": 8,
      "PasswordRequireUppercase": true,
      "PasswordRequireLowercase": true,
      "PasswordRequireDigit": true,
      "PasswordRequireSpecialChar": false
    },

    /*
     * AUDIT SETTINGS
     * EnableAuditLogging: Track all claim status changes
     * AuditRetentionDays: How long to keep audit logs (for compliance)
     */
    "AuditSettings": {
      "EnableAuditLogging": true,
      "AuditRetentionDays": 1825
    }
  }
}